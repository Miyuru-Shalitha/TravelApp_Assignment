<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/image_view_profile_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/rounded_avatar"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_profile_edit_text"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="David"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edit_text_last_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_profile_avatar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_view_first_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="First Name"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/edit_text_first_name"
        app:layout_constraintTop_toTopOf="@id/edit_text_first_name" />

    <ImageView
        android:id="@+id/image_view_first_name_edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_first_name"
        app:layout_constraintRight_toRightOf="@id/edit_text_first_name"
        app:layout_constraintTop_toTopOf="@id/edit_text_first_name" />

    <EditText
        android:id="@+id/edit_text_last_name"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_profile_edit_text"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="Jones"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edit_text_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_first_name" />

    <TextView
        android:id="@+id/text_view_last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Last Name"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/edit_text_last_name"
        app:layout_constraintTop_toTopOf="@id/edit_text_last_name" />

    <ImageView
        android:id="@+id/image_view_last_name_edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_last_name"
        app:layout_constraintRight_toRightOf="@id/edit_text_last_name"
        app:layout_constraintTop_toTopOf="@id/edit_text_last_name" />


    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_profile_edit_text"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="david@test.com"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_last_name" />

    <TextView
        android:id="@+id/text_view_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Email"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/edit_text_email"
        app:layout_constraintTop_toTopOf="@id/edit_text_email" />

    <ImageView
        android:id="@+id/image_view_email_edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_email"
        app:layout_constraintRight_toRightOf="@id/edit_text_email"
        app:layout_constraintTop_toTopOf="@id/edit_text_email" />

    <Button
        android:id="@+id/button_log_out"
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>