<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_place_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@color/tertiary"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/text_view_place_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_view_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/text_view_place_description"
        app:layout_constraintLeft_toLeftOf="@id/image_view_place_preview"
        app:layout_constraintTop_toBottomOf="@id/image_view_place_preview"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_view_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_view_place_name"
        app:layout_constraintTop_toBottomOf="@id/text_view_place_name" />

</androidx.constraintlayout.widget.ConstraintLayout>